{
  "name": "@lzt/lit-components",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/wc/index.js",
  "module": "./dist/wc/index.js",
  "types": "./dist/wc/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/wc/index.d.ts",
      "import": "./dist/wc/index.js"
    },
    "./wc": {
      "types": "./dist/wc/index.d.ts",
      "import": "./dist/wc/index.js"
    },
    "./wc/button": {
      "types": "./dist/wc/button.d.ts",
      "import": "./dist/wc/button.js"
    },
    "./wc/dropdown": {
      "types": "./dist/wc/dropdown.d.ts",
      "import": "./dist/wc/dropdown.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js"
    },
    "./react/button": {
      "types": "./dist/react/button.d.ts",
      "import": "./dist/react/button.js"
    },
    "./react/dropdown": {
      "types": "./dist/react/dropdown.d.ts",
      "import": "./dist/react/dropdown.js"
    },
    "./bundle": "./dist/bundle/lzt-components.iife.js",
    "./bundle/es": "./dist/bundle/lzt-components.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "pnpm build:wc && pnpm build:react && pnpm build:bundle",
    "build:wc": "tsc && vite build --config vite.config.wc.ts",
    "build:react": "tsc && vite build --config vite.config.react.ts",
    "build:bundle": "vite build --config vite.config.bundle.ts",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "lit": "^3.3.2",
    "@zag-js/menu": "^1.32.0",
    "@zag-js/core": "^1.32.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.2",
    "@storybook/addon-essentials": "^8.5.0",
    "@storybook/addon-links": "^8.5.0",
    "@storybook/blocks": "^8.5.0",
    "@storybook/web-components": "^8.5.0",
    "@storybook/web-components-vite": "^8.5.0",
    "@tailwindcss/postcss": "^4.1.18",
    "storybook": "^8.5.0",
    "tailwindcss": "^4.1.18",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-plugin-dts": "^3.7.0",
    "react": "catalog:",
    "react-dom": "catalog:",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@lit/react": "^1.0.8"
  },
  "customElements": "custom-elements.json"
}
